<header class="summary">
    <h1 class="summary__title"><%= page.translations['product.contents'].toUpperCase() %></h1>
    <div class="summary__list">
        <% summary.titles.forEach((section, index) => { %>
            <% if (index === 0) { %>
                <a class="summary__item item--selected" href="#<%= summary.hyphenate(section) %>">
                    <%= section %>
                </a>
            <% } else { %>
                <a class="summary__item" href="#<%= summary.hyphenate(section) %>">
                    <%= section %>
                </a>
            <% }}) %>
        </div>
</header>