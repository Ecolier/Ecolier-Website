<div id="locale-picker" class="navbar__dropdown dropdown--<%= theme %>" data-trigger="locale-picker-trigger">
    <span class="dropdown__title">
        <%= page.translations['locale-picker.language'] %>
    </span>
    <div class="dropdown__list">
        <% const selected = page.availableLocales.find(l => l.code === page.locale) %>
        <% if (selected) { %>
            <span class="dropdown__item item--condensed item--selected ">
                <%= selected.name %>
                <i class="dropdown__item__icon icon--check material-icons-round">
                    radio_button_checked
                </i>
            </span>
        <% } %>
        <% page.availableLocales.filter(locale => locale.code !== selected.code).forEach(locale => { %>
            <a data-ref="<%= locale.code %>" href="<%= page.localizedPaths[locale.code] %>" class="dropdown__item__link item--condensed dropdown__item">
                <%= locale.name %>
                <i class="dropdown__item__icon icon--uncheck material-icons-round">
                    radio_button_unchecked
                </i>
            </a>
        <% }) %>
    </div>
</div>