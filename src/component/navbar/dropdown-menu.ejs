<div id="dropdown-menu-trigger" class="navbar__dropdown-trigger nav-item">
    <i class="navbar__dropdown-trigger__icon material-icons-round font-size--36pt">arrow_drop_down</i>
</div>
<div id="dropdown-menu" class="navbar__dropdown" data-trigger="dropdown-menu-trigger">
    <div class="dropdown__list">
        <div class="dropdown__item" data-menu="products-menu">
            <i class="dropdown__item__icon icon--left material-icons-round">
                get_app
            </i>
            <span class="item__label label--grow"><%= translations['footer.products'] %></span>
            <i class="dropdown__item__icon material-icons-round">
                chevron_right
            </i>
        </div>
        <div class="dropdown__item item--left">
            <i class="dropdown__item__icon icon--left material-icons-round">
                face
            </i>
            <span><%= translations['common.hire-me'] %></span>
        </div>
        <div class="dropdown__item item--left">
            <i class="dropdown__item__icon icon--left material-icons-round">
                corporate_fare
            </i>
            <span><%= translations['common.organization'] %></span>
        </div>
    </div>
    <div class="dropdown__menu" id="products-menu">
        <div class="dropdown__menu__header">
            <div data-back class="dropdown__item item--left">
                <i class="dropdown__item__icon icon--back material-icons-round">chevron_left</i>
                <span><%= translations['footer.products'].toUpperCase() %></span>
            </div>
        </div>
        <ul class="dropdown__list">
            <% products.forEach(product => { %>
                <a class="dropdown__item dropdown__item__link item--left" href="/<%= locale %>/product/<%= product.name.toLowerCase() %>">
                    <%= product.name %>
                    <span class="item__label label--secondary">
                        <%= product.description %>
                    </span>
                </a>
            <% }) %>
        </ul>
    </div>
</div>